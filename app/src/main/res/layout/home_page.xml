<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2C1B4A"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

<!--    <androidx.appcompat.widget.LinearLayoutCompat-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1">-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_230sdp"
                android:src="@drawable/ic_7479" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="239dp"
                android:layout_height="164dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/g48" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/g499"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
        </RelativeLayout>


<!--    </androidx.appcompat.widget.LinearLayoutCompat>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:layout_weight="2.8"
                android:textColor="#EFCB68"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/convBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/g2874" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert image into pdf, png, jpeg &amp; webp"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square Fit"
                android:textColor="#EFCB68"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="2.8"/>

            <ImageView
                android:id="@+id/sqCrpBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/g2874" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fit image into square background"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_line"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Files"
                android:textColor="#EFCB68"
                android:layout_weight="2.8"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/rctBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/g2874" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View recently edited files"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/resizeBtn"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/g2738" />

        <ImageView
            android:id="@+id/crpBtn"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/g2871" />

        <ImageView
            android:id="@+id/compBtn"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/g2872" />
    </LinearLayout>


</LinearLayout>
